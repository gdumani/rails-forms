<form action="/users" method="POST" accept-charset="UTF-8">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

  <label for="username">Username</label>
  <input type="text" id="username" name="user[username]" value="<%= params[:username] %>"><br><br>

  <label for="password">Password</label>
  <input type="password" id="password" name="user[password]" value="<%= params[:password] %>"><br><br>

  <label for="email">Email</label>
  <input type="email" id="email" name="user[email]" value="<%= params[:email] %>"><br><br>

  <input type="submit" value="Submit">
</form>